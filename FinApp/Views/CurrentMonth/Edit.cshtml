@using FinApp.DTO
@using FinApp.ViewModels
@model CurrentMonthDTO?

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BankAccountDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <a class="btn btn-primary mt-2" asp-controller="MontlyBudgetPlannerVM" asp-action="Index">Back to List</a>
        <form asp-controller="CurrentMonth" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RemainingAmount" class="control-label"></label>
                <input type="number" asp-for="RemainingAmount" class="form-control" />
                <span asp-validation-for="RemainingAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="BankAccountId">Please pick bank account</label>
                <select asp-for="BankAccountId" class="form-control" asp-items="ViewBag.bankAccount"></select>
            </div>
            <div class="form-check btn-group my-3" role="group">
                <input type="checkbox" class="form-check-input btn-check" id="IsPaidExpense" name="IsPaidExpense" @Html.CheckBoxFor(model => model.IsPaidExpense)
                <label class="btn btn-outline-primary" for="IsPaidExpense">Is Paid Expense</label>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Save" class="btn btn-success mt-2" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
